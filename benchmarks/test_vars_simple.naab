# Micro-benchmark: Variable Operations
# Tests basic variable assignment and access

main {
    print("===========================================")
    print("  MICRO-BENCHMARK: Variables")
    print("===========================================")

    let iterations = 100000  # 100K iterations

    # Benchmark 1: Variable assignment
    print("")
    print("[1] Variable Assignment")
    print("  Running ", iterations, " assignments...")
    let i = 0
    while i < iterations {
        let x = 42
        i = i + 1
    }
    print("  OK Completed ", iterations, " assignments")

    # Benchmark 2: Variable access and arithmetic
    print("")
    print("[2] Variable Access + Addition")
    print("  Running ", iterations, " operations...")
    let value = 42
    let sum = 0
    let j = 0
    while j < iterations {
        sum = sum + value
        j = j + 1
    }
    print("  OK Completed ", iterations, " operations")
    print("  Final sum: ", sum)

    # Benchmark 3: Variable reassignment
    print("")
    print("[3] Variable Reassignment")
    print("  Running ", iterations, " reassignments...")
    let counter = 0
    let k = 0
    while k < iterations {
        counter = counter + 1
        k = k + 1
    }
    print("  OK Completed ", iterations, " reassignments")
    print("  Final counter: ", counter)

    print("")
    print("OK Variable benchmarks complete")
}
