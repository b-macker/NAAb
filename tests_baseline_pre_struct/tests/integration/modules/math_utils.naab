// Math utilities module for integration testing
// Demonstrates export functionality

export function add(a, b) {
    return a + b
}

export function subtract(a, b) {
    return a - b
}

export function multiply(a, b) {
    return a * b
}

export function divide(a, b) {
    if (b == 0) {
        throw "Division by zero"
    }
    return a / b
}

export function factorial(n) {
    if (n <= 1) {
        return 1
    }
    return n * factorial(n - 1)
}

export function power(base, exp) {
    if (exp == 0) {
        return 1
    }
    let result = 1
    let i = 0
    while (i < exp) {
        result = result * base
        i = i + 1
    }
    return result
}
