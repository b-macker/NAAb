// Test: Basic Calculator Functionality
// Tests: variables, arithmetic, functions, closures

// Test 1: Basic arithmetic
let a = 10
let b = 5
let sum = a + b
let diff = a - b
let product = a * b
let quotient = a / b

print("=== Test 1: Basic Arithmetic ===")
print("10 + 5 =", sum)     // Expected: 15
print("10 - 5 =", diff)    // Expected: 5
print("10 * 5 =", product) // Expected: 50
print("10 / 5 =", quotient)// Expected: 2

// Test 2: Comparison and logical operators
print("\n=== Test 2: Comparisons ===")
print("10 > 5:", a > b)    // Expected: true
print("10 < 5:", a < b)    // Expected: false
print("10 == 10:", a == 10)// Expected: true
print("10 != 5:", a != b)  // Expected: true

print("\n=== Test 3: Logical Operators ===")
print("true && true:", true && true)   // Expected: true
print("true && false:", true && false) // Expected: false
print("true || false:", true || false) // Expected: true
print("!true:", !true)                 // Expected: false

// Test 3: Functions
function add(x, y) {
    return x + y
}

function multiply(x, y) {
    return x * y
}

function factorial(n) {
    if (n <= 1) {
        return 1
    }
    return n * factorial(n - 1)
}

print("\n=== Test 4: Functions ===")
print("add(3, 7):", add(3, 7))         // Expected: 10
print("multiply(4, 5):", multiply(4, 5)) // Expected: 20
print("factorial(5):", factorial(5))   // Expected: 120

// Test 4: Closures
function makeCounter() {
    let count = 0
    return function() {
        count = count + 1
        return count
    }
}

print("\n=== Test 5: Closures ===")
let counter = makeCounter()
print("counter():", counter()) // Expected: 1
print("counter():", counter()) // Expected: 2
print("counter():", counter()) // Expected: 3

// Test 5: Default parameters
function greet(name, greeting = "Hello") {
    return greeting + ", " + name + "!"
}

print("\n=== Test 6: Default Parameters ===")
print(greet("World"))           // Expected: Hello, World!
print(greet("Alice", "Hi"))     // Expected: Hi, Alice!

print("\n=== All Calculator Tests Passed ===")
