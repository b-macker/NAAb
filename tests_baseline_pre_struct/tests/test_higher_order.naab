// Test map/filter/reduce/find higher-order array functions
import "stdlib" as std

// Test data
let nums = [1, 2, 3, 4, 5]

// Test 1: map - double all numbers
function double(x) {
    return x * 2
}
let doubled = std.map_fn(nums, double)
// Expected: [2, 4, 6, 8, 10]

// Test 2: filter - get even numbers
function is_even(x) {
    return x % 2 == 0
}
let evens = std.filter_fn(nums, is_even)
// Expected: [2, 4]

// Test 3: reduce - sum all numbers
function add(acc, x) {
    return acc + x
}
let sum = std.reduce_fn(nums, add, 0)
// Expected: 15

// Test 4: find - first number > 3
function greater_than_3(x) {
    return x > 3
}
let found = std.find(nums, greater_than_3)
// Expected: 4

// If we got here without errors, the functions work!
