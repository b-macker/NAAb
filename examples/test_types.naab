# Test program - Type checking

main {
    print("=== Type Checker Test ===")
    print("")

    # Test 1: Basic type inference
    print("Test 1: Basic type inference")
    let x = 42                    # int
    let y = 3.14                  # float
    let s = "hello"               # string
    let b = true                  # bool
    let lst = [1, 2, 3]           # list[int]
    print("  Variables defined successfully")
    print("")

    # Test 2: Arithmetic operations
    print("Test 2: Arithmetic operations")
    let sum = x + 10              # int + int -> int
    let product = x * y           # int * float -> float
    let concat = s + " world"     # string + string -> string
    print("  Arithmetic operations successful")
    print("")

    # Test 3: Comparison operations
    print("Test 3: Comparisons")
    let greater = x > 10          # int > int -> bool
    let equal = s == "hello"      # string == string -> bool
    print("  Comparisons successful")
    print("")

    # Test 4: List operations
    print("Test 4: List operations")
    let first = lst[0]            # list[int][int] -> int
    let numbers = [1, 2, 3, 4, 5]
    print("  List operations successful")
    print("")

    # Test 5: Type errors (should be caught)
    print("Test 5: Intentional type errors")
    # Uncomment these to see type errors:
    # let bad1 = x + s            # ERROR: int + string
    # let bad2 = x[0]             # ERROR: cannot index int
    # let bad3 = "hello" - 5      # ERROR: cannot subtract from string
    print("  Type error tests skipped (commented out)")
    print("")

    # Test 6: Function calls
    print("Test 6: Function calls")
    print("Testing:", x, y, s)
    print("  Function calls successful")
    print("")

    print("=== Type checking test complete! ===")
}

fn add(a, b) {
    return a + b
}

fn greet(name) {
    return "Hello, " + name
}
