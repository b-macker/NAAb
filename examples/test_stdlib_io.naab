# Test program - Standard library IO module

use io

main {
    print("=== Standard Library IO Test ===")
    print("")

    # Test 1: Check if file exists
    print("Test 1: Check if test file exists")
    let exists_result = io.exists("test_file.txt")
    print("  File exists:", exists_result)
    print("")

    # Test 2: Write to file
    print("Test 2: Write to file")
    let write_result = io.write_file("test_output.txt", "Hello from NAAb stdlib!")
    print("  Write result:", write_result)
    print("")

    # Test 3: Read from file
    print("Test 3: Read from file")
    let content = io.read_file("test_output.txt")
    print("  File content:", content)
    print("")

    print("=== IO module test complete! ===")
}
