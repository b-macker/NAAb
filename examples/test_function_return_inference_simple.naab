# Test Phase 2.4.4 Phase 2: Function Return Type Inference
# Simple tests that work with current implementation

# Test 1: Return int literal
fn getInt() {
    return 42
}

# Test 2: Return string literal
fn getString() {
    return "hello world"
}

# Test 3: Return float literal
fn getFloat() {
    return 3.14
}

# Test 4: Return boolean
fn getBool() {
    return true
}

# Test 5: Return list
fn getList() {
    return [1, 2, 3]
}

# Test 6: Conditional return (same type)
fn checkCondition() {
    if (true) {
        return "yes"
    } else {
        return "no"
    }
}

# Test 7: No return (void)
fn doNothing() {
    let x = 5
}

main {
    print("=== Function Return Type Inference Tests ===")
    print("(Check the [INFO] messages above for inferred types)")
    print("")

    print("Test 1: getInt()")
    let x = getInt()
    print("  Result: " + x.toString())
    print("")

    print("Test 2: getString()")
    let s = getString()
    print("  Result: " + s)
    print("")

    print("Test 3: getFloat()")
    let f = getFloat()
    print("  Result: " + f.toString())
    print("")

    print("Test 4: getBool()")
    let b = getBool()
    print("  Result: " + b.toString())
    print("")

    print("Test 5: getList()")
    let lst = getList()
    print("  Result: " + lst.toString())
    print("")

    print("Test 6: checkCondition()")
    let cond = checkCondition()
    print("  Result: " + cond)
    print("")

    print("Test 7: doNothing() - void return")
    doNothing()
    print("  Executed successfully")
    print("")

    print("=== All tests completed ===")
    print("")
    print("Summary of inferred types (see [INFO] messages above):")
    print("  - getInt: should be 'int'")
    print("  - getString: should be 'string'")
    print("  - getFloat: should be 'float'")
    print("  - getBool: should be 'bool'")
    print("  - getList: should be 'list'")
    print("  - checkCondition: should be 'string'")
    print("  - doNothing: should be 'void' or 'null'")
}
