// Exported function - can be accessed from other modules
export fn add(a: int, b: int) -> int {
    return a + b
}

// Exported function
export fn multiply(a: int, b: int) -> int {
    return a * b
}

// Exported function
export fn subtract(a: int, b: int) -> int {
    return a - b
}

// Private helper function - should NOT be accessible (TODO: enforce)
fn internal_helper(x: int) -> int {
    return x * 2
}

// Exported struct
export struct Point {
    x: int
    y: int
}

// Exported struct with methods (via functions)
export struct Vector {
    x: int
    y: int
}

