{
    "gates": [
        {
            "id": "gate_file_size",
            "name": "File Size Limit",
            "description": "Ensures no file exceeds 1MB",
            "severity": "critical",
            "threshold_bytes": 1048576,
            "blocking": true
        },
        {
            "id": "gate_no_secrets",
            "name": "Secret Detection",
            "description": "Scans for potential API keys",
            "severity": "critical",
            "patterns": ["sk-", "api_key", "password"],
            "blocking": true
        },
        {
            "id": "gate_file_permissions",
            "name": "Permissions Check",
            "description": "Ensures critical files aren't world-writable",
            "severity": "warning",
            "blocking": false
        }
    ],
    "scanner": {
        "max_depth": 5,
        "ignore": [".git", "node_modules", "target", "dist", "__pycache__"]
    },
    "audit": {
        "log_path": "logs/audit.jsonl",
        "buffer_size": 100
    },
    "council": {
        "enabled": true,
        "quorum": 2,
        "members": ["SecOps_Alpha", "Compliance_Beta", "Legal_Gamma"],
        " chairman": "Governing_Body"
    },
    "provenance": {
        "track_identity": true,
        "require_signature": false
    }
}
