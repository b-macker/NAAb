# Test program - User-defined functions

function add(a: int, b: int) -> int {
    let result = a + b
    return result
}

function greet(name: string) -> string {
    print("Hello from function!")
    return name
}

function factorial(n: int) -> int {
    if (n <= 1) {
        return 1
    }
    let prev = factorial(n - 1)
    return n * prev
}

main {
    print("Testing user-defined functions")
    print("")

    # Test simple function
    print("Calling add(5, 3):")
    let sum = add(5, 3)
    print("Result:", sum)
    print("")

    # Test function with side effects
    print("Calling greet(\"NAAb\"):")
    let greeting = greet("NAAb")
    print("Returned:", greeting)
    print("")

    # Test recursive function
    print("Calling factorial(5):")
    let fact = factorial(5)
    print("5! =", fact)
}
