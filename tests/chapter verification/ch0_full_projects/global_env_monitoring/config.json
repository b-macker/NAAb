{
  "application": {
    "name": "Global Environmental Monitoring and Reporting System (GEMRS)",
    "version": "1.0.0",
    "run_interval_minutes": 60,
    "log_level": "INFO"
  },
  "data_sources": [
    {
      "id": "weather_api",
      "name": "Global Weather Data",
      "endpoint": "https://api.example.com/weather/v1",
      "api_key": "YOUR_WEATHER_API_KEY",
      "parameters": {
        "latitude": "34.0522",
        "longitude": "-118.2437",
        "units": "metric"
      },
      "fetch_enabled": true,
      "mock_data_path": "data/mock_weather_data.json"
    },
    {
      "id": "air_quality_api",
      "name": "City Air Quality Data",
      "endpoint": "https://api.example.com/airquality/v2",
      "api_key": "YOUR_AIR_QUALITY_API_KEY",
      "parameters": {
        "city": "Los Angeles",
        "country": "USA"
      },
      "fetch_enabled": true,
      "mock_data_path": "data/mock_air_quality_data.json"
    }
  ],
  "monitoring_thresholds": {
    "temperature_celsius": {
      "warning_high": 30,
      "critical_high": 35,
      "warning_low": 5,
      "critical_low": 0
    },
    "aqi": {
      "warning_high": 100,
      "critical_high": 150
    },
    "humidity_percent": {
      "warning_high": 80,
      "critical_high": 95
    }
  },
  "reporting": {
    "daily_report_time_utc": "00:00",
    "weekly_report_day": "Sunday",
    "output_format": "json",
    "report_directory": "data/reports"
  },
  "notifications": {
    "enabled": true,
    "critical_alerts_only": false,
    "recipients": [
      "admin@example.com",
      "operations@example.com"
    ],
    "email_config": {
      "smtp_server": "smtp.example.com",
      "smtp_port": 587,
      "username": "notification@example.com",
      "password": "YOUR_EMAIL_PASSWORD",
      "sender_email": "gemrs-noreply@example.com"
    }
  },
  "logging": {
    "file_path": "logs/gemrs.log",
    "max_file_size_mb": 10,
    "max_backup_files": 5
  }
}
