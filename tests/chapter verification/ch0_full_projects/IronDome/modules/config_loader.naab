// Configuration Loading and Parsing
// Uses: file, json, io

use io
use json
use file

export fn load_policy(path) {
    if !file.exists(path) {
        throw "Config file not found: " + path
    }
    
    let raw = file.read(path)
    return json.parse(raw)
}
