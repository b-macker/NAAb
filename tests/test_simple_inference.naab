// Simple type inference test - primitives only

fn testBasicInference() {
    print("\n[Test 1] Basic type inference")

    // Integer
    let x = 42
    print("x = ", x)

    // Float
    let pi = 3.14
    print("pi = ", pi)

    // String
    let name = "Alice"
    print("name = ", name)

    // Boolean
    let flag = true
    print("flag = ", flag)
}

fn testListInference() {
    print("\n[Test 2] List type inference")

    // List of integers
    let numbers = [1, 2, 3]
    print("numbers = ", numbers)

    // List of strings
    let words = ["hello", "world"]
    print("words = ", words)
}

fn testDictInference() {
    print("\n[Test 3] Dict type inference")

    // Dict with int values
    let scores = {"math": 95, "english": 87}
    print("scores = ", scores)
}

fn testMixedTypes() {
    print("\n[Test 4] Mixed explicit and inferred")

    // Explicit
    let a: int = 10
    print("a: int = ", a)

    // Inferred
    let b = 20
    print("b = ", b)

    // Both work together
    let c = a + b
    print("c = a + b = ", c)
}

main {
    print("=== Type Inference Tests ===\n")

    testBasicInference()
    testListInference()
    testDictInference()
    testMixedTypes()

    print("\n=== All tests passed! ===")
}
