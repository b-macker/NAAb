// Phase 2.2: Variable Passing to Inline Code
// Test file to verify that NAAb variables can be accessed in inline polyglot blocks

main {
    print("=== Phase 2.2: Testing Variable Binding to Inline Code ===\n");

    // Test 1: JavaScript with bound variables
    print("\n[Test 1] JavaScript with bound integer:");
    let count = 42;
    <<javascript[count]
    console.log("Count from NAAb: " + count);
    >>;

    // Test 2: Python with bound variables
    print("\n[Test 2] Python with bound string:");
    let message = "Hello from NAAb!";
    <<python[message]
    print(f"Message: {message}")
    >>;

    // Test 3: Multiple bound variables
    print("\n[Test 3] JavaScript with multiple bound variables:");
    let x = 10;
    let y = 32;
    <<javascript[x, y]
    console.log("x + y = " + (x + y));
    >>;

    // Test 4: Python with multiple variables
    print("\n[Test 4] Python with multiple bound variables:");
    let a = 5;
    let b = 7;
    <<python[a, b]
    print(f"{a} * {b} = {a * b}")
    >>;

    // Test 5: Bound variable with return value
    print("\n[Test 5] JavaScript binding and return:");
    let base = 5;
    let result = <<javascript[base]
    base * base
    >>;
    print(result);

    // Test 6: Python list binding
    print("\n[Test 6] Python with bound list:");
    let numbers = [1, 2, 3, 4, 5];
    <<python[numbers]
    print(f"Numbers: {numbers}")
    print(f"Sum: {sum(numbers)}")
    >>;

    // Test 7: Dict/object binding
    print("\n[Test 7] JavaScript with bound dict:");
    let person = {"name": "Alice", "age": 30};
    <<javascript[person]
    console.log("Person: " + JSON.stringify(person));
    >>;

    // Test 8: Boolean binding
    print("\n[Test 8] Python with bound boolean:");
    let is_active = true;
    <<python[is_active]
    print(f"Is active: {is_active}")
    >>;

    // Test 9: C++ with bound variables
    print("\n[Test 9] C++ with bound integer:");
    let value = 100;
    <<cpp[value]
    #include <iostream>
    int main() {
        std::cout << "Value from NAAb: " << value << std::endl;
        return 0;
    }
    >>;

    print("\n\n=== Phase 2.2: All tests completed ===");
}
