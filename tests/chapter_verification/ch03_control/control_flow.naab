# Chapter 3: Control Flow Verification

main {
    print(">>> Chapter 3 Verification <<<")

    # 1. If / Else
    let score = 85
    if score >= 90 {
        print("Grade: A")
    } else if score >= 80 {
        print("Grade: B")
    } else {
        print("Grade: C")
    }

    # 2. While Loop
    let count = 3
    while count > 0 {
        print("Countdown: ", count)
        count = count - 1
    }

    # 3. For Loop (Iterating array)
    let items = ["apple", "banana", "cherry"]
    print("Items:")
    for item in items {
        print(" - ", item)
    }

    # 4. Break / Continue
    print("Break/Continue Check:")
    let i = 0
    while i < 10 {
        i = i + 1
        if i % 2 == 0 {
            continue # Skip evens
        }
        if i > 5 {
            break    # Stop after 5
        }
        print(" Odd number: ", i)
    }
}
